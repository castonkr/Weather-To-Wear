<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.rosehulman.schaffll.weathertowear.fragments.HomeFragment">

    <!-- TODO: Update blank fragment layout -->


   <!-- <View
        android:id="@+id/lineView"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#c0c0c0"/>-->



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="327dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageView" />

    <View
        android:id="@+id/lineView"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@id/imageView"
        android:background="#1a17a2"/>

    <Button
        android:text="Outfit Option Two"
        android:layout_width="193dp"
        android:layout_height="180dp"
        android:id="@+id/outfitChoiceTwo"
        android:layout_below="@+id/lineView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Outfit Option One"
        android:layout_width="193dp"
        android:layout_height="180dp"
        android:id="@+id/outfitChoiceOne"
        android:layout_below="@+id/lineView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
